<h1 style="text-align: center;">FLICKR API</h1>

<div>
  <div style="display: flex; justify-content: space-evenly; padding: 5vh; border-bottom: solid 1px; font-size: 12px;">
    <div style="border-top: solid 1px; border-right: solid 1px; padding: 3vh 3vw 0 3vw;">
      <%= form_with url: '/', local: true, method: "get" do |f| %>
        <%= f.hidden_field :random_user, value: true %><br>
        <%= f.submit 'Generate random user ID' %>
      <% end %>

      <div style="padding-top: 10px; text-align: center;">
        <% if @random_user %>
          <%= @random_user %>
        <% end %>
      </div>
    </div>
    
    <div style="border-top: solid 1px; border-right: solid 1px; padding: 3vh 3vw 0 3vw;">
      <%= form_with url: '/', local: true, method: "get" do |f| %>
        <%= f.label 'Photos by User ID:' %>
        <%= f.text_field :user_id %><br><br>
        <%= f.submit 'Search' %>
      <% end %>
    </div>

    <div style="border-top: solid 1px; border-right: solid 1px; padding: 3vh 3vw 0 3vw;">
      <%= form_with url: '/', local: true, method: "get" do |f| %>
        <%= f.label 'User info by User ID:' %>
        <%= f.text_field :user_info %><br><br>
        <%= f.submit 'Search' %>
      <% end %>
    </div>

    <div style="border-top: solid 1px; border-right: solid 1px; padding: 3vh 3vw 0 3vw;">
      <%= form_with url: '/', local: true, method: "get" do |f| %>
        <%= f.hidden_field :newest_photo, value: true %><br>
        <%= f.submit 'View the newest photo' %>
      <% end %>
    </div>
  </div>

  <div style="display: flex; justify-content: center; flex-direction: column; font-size: 13px">
    <% if @user_info %>
      <p style="text-align: center;">USERNAME: <b><%= @user_info.username %></b></p>
      <p style="text-align: center;">ID: <b><%= @user_info.nsid %></b></p>
      <p style="text-align: center;">REAL NAME: <b><%= @user_info.realname %></b></p>
      <p style="text-align: center;">NUMBER OF PHOTOS: <b><%= @user_info.photos.count %></b></p>
    <% end %>
  </div>

  <div>
    <div style="margin: 15px; padding: 1vh; display: flex; flex-flow: column wrap; justify-content: center;">
      <% if @photos %>
        <% @photos.each do |photo| %>
          <div style="display: flex; justify-content: center; padding: 20px;">
            <img src=<%=Flickr.url(photo)%> ><br>
          </div>
        <% end %>
      <% end %>
    </div>

    <div style="margin: 15px; display: flex; justify-content: center;">
      <% if @photo %>
          <img src=<%=Flickr.url(@photo)%> ><br>
      <% end %>
    </div>
  </div>
</div>
